<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>ID</th>
              <th>ジャンル</th>
              <th>業務名</th>
              <th>更新日</th>
            </tr>
          </thead>
          <% @manuals.each do |manual| %>
          <tbody>
            <tr>
              <td><%= manual.id %></td>
              <td><%= manual.genre.name %></td>
              <td>
                <%= link_to public_manual_path(manual.id) do %>
                <%= manual.task_name %>
                <% end %>
              </td>
              <td><%= manual.updated_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
            </tr>
          </tbody>
          <% end %>
        </table>

      </div>
    </div>
  </div>
