<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h2 class="is-size-5-mobile
      ">
        <%= @employee.name %>さんの情報
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6 is-size-7-mobile">

        <div class="field">
          <P>
            <span>
              従業員No.
            </span>
            <span>
              <%= @employee.id %>
            </span>
          </P>
        </div>

        <div class="field">
          <P>
            <span>
              氏名：
            </span>
            <span>
              <%= @employee.name %>
            </span>
            <%= link_to edit_public_employee_path, data: {"turbolinks" => false} do %>
            <span class="icon is-small is-left">
              <i class="fas fa-edit"></i>
            </span>
            <% end %>
          </P>
        </div>

        <div class="field">
          <P>
            <span>
              電話番号：
            </span>
            <span>
              <%= @employee.telephone_number %>
            </span>
          </P>
        </div>

        <div class="field">
          <P>
            <span>
              ステータス：
            </span>
            <% if @employee.is_deleted == true %>
              <span class="">
                退職
              </span>
            <% else %>
              <span class="">
                在籍中
              </span>
            <% end %>
          </P>
        </div>

        <div class="field">
          <span>
            <%= link_to "質問内容一覧を見る", public_comments_employee_path, class: "button is-success", data: {"turbolinks" => false} %>
          </span>
        </div>

        <div class="field">
          <span>
            <%= link_to "習得業務一覧を見る", public_learnings_employee_path, class: "button is-success", data: {"turbolinks" => false} %>
          </span>
        </div>

      </div>
    </div>
  </div>
</section>