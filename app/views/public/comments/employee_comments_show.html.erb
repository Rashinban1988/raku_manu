<%= form_with model: @comment, url: public_is_desolved_comments_path, method: :patch do |f| %>
  <%= f.hidden_field :manual_id %>
  <%= f.hidden_field :comment %>
  <% if @comment.is_desolved == false %>
    <%= f.hidden_field :is_desolved => false %>
    <button class="button is-success is-outlined is-small ">
      <span>
        <% f.submit %>
      </span>
      <span class="icon">
        <i class="fas fa-check"></i>
      </span>
      <span>解決</span>
    </button>
  <% else %>
    <%= f.hidden_field :is_desolved => true %>
    <button class="button is-success is-small ">
      <span>
        <% f.submit %>
      </span>
      <span class="icon">
        <i class="fas fa-check"></i>
      </span>
      <span>解決済み</span>
    </button>
  <% end %>
<% end %>

<%= form_with model: @return_comment, url: public_create_return_comments_path do |f| %>
  <%= f.hidden_field :comment_id %>
  <%= f.hidden_field :employee_id %>

  <%= f.label :return_comment, "質問への返信" %><br>
  <%= f.text_field :return_comment %><br>
  <%= f.submit "返信する" %>
<% end %>

