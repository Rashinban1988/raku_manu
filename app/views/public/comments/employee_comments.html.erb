<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h2 class="is-size-5-mobile">
        <%= @employee.name %>さんの質問一覧
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6 is-size-7-mobile">

        <table class="table is-striped is-fullwidth">
          <thead class="bg-light">
            <tr>
              <th>質問日</th>
              <th>タスク名</th>
              <th>質問内容</th>
              <th>解決</th>
            </tr>
          </thead>
          <% @comments.each do |comment| %>
          <tbody>
            <tr>
              <td><%= comment.created_at.strftime("%Y/%m/%d/%H:%M") %>
              <td>
                <%= comment.manual.task_name %>
              </td>
              <td>
                <%= link_to public_show_comments_employee_path(comment.id), data: {"turbolinks" => false} do %>
                  <%= comment.comment %>
                <% end %>
              </td>
              <% if comment.is_desolved == true %>
                <td class="text-success">
                  済
                </td>
              <% else %>
                <td class="text-secondary">
                  未
                </td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>

      </div>
    </div>
  </div>
</section>