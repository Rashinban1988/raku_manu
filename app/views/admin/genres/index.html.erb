<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h2 class="title">
        業務名一覧
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <div class="field">
            <%= f.label :name, "業務を追加:", class: "label" %>
            <p class="control has-icons-left">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "例:　レジ精算", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fa fa-edit"></i>
              </span>
            </p>
          </div>

          <div class="actions">
            <%= f.submit "追加", class: "button is-success" %>
          </div>
        <% end %>

        <section class="hero is-small is-link m-4">
          <div class="hero-body">
            <div class="container">
              <h2 class="title">
                ジャンル一覧
              </h2>
            </div>
          </div>
        </section>

        <div>
          <div class="columns is-multiline is-mobile">
            <% @genres.each do |genre| %>
              <div class="column is-full">
                <%= link_to edit_admin_genre_path(genre) do %>
                  <span class="is-centered">
                    <span class="icon is-small is-left">
                      <i class="fas fa-edit"></i>
                    </span>
                    <%= genre.name %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
