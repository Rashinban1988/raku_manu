<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h2 class="title">
        「<%= @manual.task_name %>」
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">



        <div class="field">
          <P>
            <span>
              業務名：
            </span>
            <span>
              <%= @manual.genre.name %>
            </span>
          </P>
        </div>

        <div class="field">
          <P>
            <span>
              タスク名：
            </span>
            <span>
              <%= @manual.task_name %>
            </span>
          </P>
        </div>

        <div class="field">
          <P>
            <span>
              説明文：
            </span>
            <span>
              <%= @manual.description %>
            </span>
          </P>
        </div>

        <div class="field">
          <P>
            <% if @manual.is_draft == true %>
              <span class="is-small is-danger">
                下書き中
              </span>
            <% else %>
              <span class="is-small is-primary">
                投稿済み
              </span>
            <% end %>
          </P>
        </div>

        <div>
          <span>
            <%= link_to "編集する", edit_admin_manual_path, class: "button is-small is-success" %>
          </span>
        </div>


      </div>
    </div>
  </div>
</section>
